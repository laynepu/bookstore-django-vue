# Environment Variables Example for Django / Backend

# Database Configuration
DATABASE_NAME=your_db_name         # Name of the database
DATABASE_USER=your_db_user         # Database username
DATABASE_PASSWORD=your_db_password # Database password
DATABASE_HOST=db                   # Database host (Use "db" if running with Docker Compose)
DATABASE_PORT=5432                  # Database port (Default for PostgreSQL is 5432)

# Django Application Configuration
SECRET_KEY=your_secret_key         # Django secret key (Generate a secure key for production)

# Debug Mode (Set to False in production)
DEBUG=True                          # True enables debugging mode, should be False in production

# Allowed Hosts (Specify allowed domains for the Django app)
ALLOWED_HOSTS=*                     # Use "*" for development, but specify domains in production